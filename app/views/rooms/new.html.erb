<div class="container-fuild">
    <div class="row">
        <div class="clearfix"></div>
        <div class="col-sm-3 col-md-2 sidebar border-right p-5">
            <ul class="nav nav-sidebar">
                <li class="active side-menu"><%= link_to "基本情報", controller: "rooms", action: "new" %></li>
            </ul>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <div class="room-view">
                <div class="room-view-box p-5">
                    <div>
                        <h3>ルーム情報登録</h3>
                    </div>
                    <%= form_with model: Room.new do |f| %>
                      <table>
                        <div class="form-group">
                                  <%= f.label :room_name ,"ルーム名", class: "control-label required-a" %>
                                  <%= f.text_field :room_name, class: "form-control" %>
                        </div>
                 
                        <div class="form-group">
                                <%= f.label :room_introduction ,"ルーム紹介", class: "control-label required-a" %>
                                <%= f.text_field :room_introduction, class: "form-control" %>
                        </div>
                 
                        <div class="form-group">
                                <%= f.label :price ,"料金", class: "control-label required-a" %>
                                <%= f.number_field :price, class: "form-control" %>
                        </div>
    
                        <div class="form-group">
                                <%= f.label :adress ,"住所", class: "control-label required-a" %>
                                <%= f.text_area :adress, class: "form-control" %>
                        </div>
            
                        <div class="form-group">
                                <%= f.label :image ,"ルーム画像", class: "control-label required-a" %>
                                <%= f.file_field :image %>
                        </div>
                    </table>
                      <div class="form-group">
                              <%= f.submit "登録", class: "btn btn-primary" %>
                      </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

