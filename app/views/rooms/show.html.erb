<div class="container">
  <div class="row">
        <div class="col-md-8 p-5">
            <%= image_tag @room.image.variant(resize:'470x266') %>
            <div class="room-show-detile">
                <div class="room-show-detile-icon">
                    <img class="host-icon" src="https://presite-potepancamp-rails-02.herokuapp.com/assets/default_icon.jpg" alt="">
                </div>
                <div class="room-show-profile">
                    <p class="room-show-profile-name"><%= @room.room_name %></p>
                    <p class="room-show-profile-address"><%= @room.adress %></p>
                </div>
            </div>
            <p class="room-show-profile-content "><%= @room.room_introduction %></p>
        </div>
        
        <div class="col-md-4 p-5">
            <div class="room-show-nav">
                <h5 class="price-icon"><%= @room.price %></h5>
                <div class="room-show-detile">
                    <%= current_user.id %>/<%= @room.id %>

                    <%= form_with model: @reservation, url: confirm_reservations_path, method: 'post', local: true do |f| %>
                    <div class="col-xs-2">
                        <%= f.label :start_date, "開始日" %>
                        <%= f.date_field :start_date, class: "form-control mb-4" %>
                    </div>
                    <div class="col-xs-2">
                        <%= f.label :end_date, "終了日" %>
                        <%= f.date_field :end_date, class: "form-control mb-4" %>
                    </div>
                    <div class="col-xs-2">
                        <%= f.label :number_of_people, "人数" %>
                        <%= f.number_field :number_of_people, class: "form-control mb-4" %>
                    </div>
                      
                        <% @reservation.total_price = @room.price %>
                        <%= f.hidden_field :total_price %>
                        <%= f.hidden_field :user_id, value: current_user.id %>
                        <%= f.hidden_field :room_id, value: @room.id %>
                    
                    <div>
                    <%= f.submit "予約", class: "form-control btn btn-primary"%>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
   </div>
</div>  
         